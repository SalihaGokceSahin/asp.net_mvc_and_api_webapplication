@model WebApplication_MVC_API.Models.MeetingModel
@{
    ViewBag.Title = "MeetingForm";
}
<div class="panel panel-success" style="width:300px; margin:auto; margin-top:75px;">
    <div class="panel panel-title panel-heading">We are inviting you too!</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                Name:
                @Html.TextBoxFor(x => x.name, new { @class="form-control"})
            </div>
            <div class="form-group">
                E-mail:
                @Html.TextBoxFor(x => x.email, new { @class="form-control"})
            </div>
            <div class="form-group">
                Would you join to meeting?
                @Html.DropDownListFor(x => x.participationStatus, new[]
           {
               new SelectListItem() {Text="Yes",Value=bool.TrueString},
               new SelectListItem(){Text="No",Value=bool.FalseString}
           }, /*"Coming?", */new { @class = "form-control" })
            </div>
            <div class="text-center">
                <input class="btn btn-info" type="submit" value="send" />
            </div>
        }
    </div>
</div>

